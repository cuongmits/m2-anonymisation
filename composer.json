{
  "name": "cuongmits/m2-anonymisation",
  "minimum-stability": "stable",
  "authors": [
    {
      "name": "Keon Nguyen",
      "email": "keon.nguyen@inviqa.com"
    }
  ],
  "require": {
    "php": ">=7.3",
    "ext-json": "*",
    "ext-curl": "*"
  },
  "require-dev": {
    "behat/behat": "^3.6",
    "phpspec/phpspec": "^6.1",
    "bossa/phpspec2-expect": "^3.1.3",
    "phpstan/phpstan": "^0.12.23"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-0": {
      "": [
        "src",
        "test",
        "features/bootstrap"
      ]
    }
  },
  "scripts": {
    "phpspec": "bin/phpspec --ansi --no-interaction --format=pretty run",
    "behat": "bin/behat --colors --no-interaction --config=behat.yml",
    "phpstan": "bin/phpstan --ansi analyse",
    "test": [
      "@phpspec",
      "@behat",
      "@phpstan"
    ]
  }
}
